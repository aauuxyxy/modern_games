{
  "compilerOptions": {
    "target": "ES2020", // コンパイル後のJavaScriptのバージョン
    "module": "commonjs", // モジュールの形式
    "outDir": "./dist", // コンパイル後の出力先フォルダ
    "rootDir": "./src", // TypeScriptファイルのソースフォルダ
    "strict": true, // 厳格な型チェックを有効化
    "esModuleInterop": true, // CommonJSとES Modulesの相互運用性を向上
    "skipLibCheck": true, // ライブラリの型チェックをスキップ
    "forceConsistentCasingInFileNames": true, // ファイル名のケースを強制
    "moduleResolution": "Node" //モジュールの解決方式
  },
  "include": ["src/**/*"], // コンパイル対象のファイル
  "exclude": ["node_modules"] // 除外するフォルダ
}
